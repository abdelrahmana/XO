<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fragement_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.trued.xo.fragement_game">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_height="360dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/mygridv"
        android:background="@drawable/board"
        android:layout_alignParentRight="true"
        android:alpha="7">
    </GridLayout>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/image"
        android:layout_row="0"
        android:layout_column="0"
        android:onClick="puthere"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="90dp"
        android:tag="0"
        android:alpha="7" />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/image2"
        android:layout_row="0"
        android:layout_column="1"
        android:onClick="puthere"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="90dp"
        android:tag="1"
        android:alpha="7" />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/image3"
        android:layout_row="0"
        android:layout_column="2"
        android:onClick="puthere"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="90dp"
        android:tag="2"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/image4"
        android:layout_row="1"
        android:layout_column="0"
        android:onClick="puthere"
        android:layout_alignStart="@+id/image"
        android:layout_marginTop="208dp"
        android:layout_alignLeft="@+id/image"
        android:tag="3"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/image5"
        android:layout_row="1"
        android:onClick="puthere"
        android:layout_column="1"
        android:layout_alignStart="@+id/image2"
        android:layout_marginTop="208dp"
        android:layout_alignLeft="@+id/image2"
        android:tag="4"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/image6"
        android:layout_row="1"
        android:layout_column="2"
        android:onClick="puthere"
        android:layout_alignStart="@+id/image3"
        android:layout_marginTop="208dp"
        android:layout_alignLeft="@+id/image3"
        android:tag="5"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/image7"
        android:layout_row="2"
        android:layout_column="0"
        android:onClick="puthere"
        android:layout_alignStart="@+id/image"
        android:layout_marginTop="325dp"
        android:layout_alignLeft="@+id/image"
        android:tag="6"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/image8"
        android:layout_row="2"
        android:layout_column="1"
        android:onClick="puthere"
        android:layout_alignStart="@+id/image2"
        android:layout_marginTop="325dp"
        android:layout_alignLeft="@+id/image2"
        android:tag="7"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/image9"
        android:layout_row="2"
        android:layout_column="2"
        android:onClick="puthere"
        android:layout_alignStart="@+id/image3"
        android:layout_marginTop="325dp"
        android:layout_alignLeft="@+id/image3"
        android:tag="8"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fffaff0b"
        android:padding="30dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/playAgainLayout"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/winnerMessage"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play Again"
            android:id="@+id/playAgainButton"
            android:layout_gravity="center_horizontal"
            android:onClick="playAgain" />
    </LinearLayout>

</RelativeLayout>
